<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppCuriosity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- primary color -->
        <item name="colorPrimary">@color/lavander</item>
        <item name="colorPrimaryVariant">@color/lavander</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <!-- secondary color -->
        <item name="colorSecondary">@color/TEAL_200</item>
        <item name="colorSecondaryVariant">@color/TEAL_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- primary color -->
        <item name="colorPrimary">@color/lavander</item>
        <item name="colorPrimaryVariant">@color/lavander</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <!-- secondary color -->
        <item name="colorSecondary">@color/TEAL_200</item>
        <item name="colorSecondaryVariant">@color/TEAL_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>
    
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>